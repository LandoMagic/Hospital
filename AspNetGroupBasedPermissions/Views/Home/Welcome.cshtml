
@{
    ViewBag.Title = "Welcome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {
    
<link href="~/Content/default.css" rel="stylesheet" />
}
<div class="overlay"></div>
<div class="carousel fade-carousel slide" data-ride="carousel" data-interval="6000" id="bs-carousel">
    <!-- Overlay -->
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#bs-carousel" data-slide-to="0" class="active"></li>
        <li data-target="#bs-carousel" data-slide-to="1"></li>
        <li data-target="#bs-carousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item slides active">
            <div class="slide-1"></div>
            <div class="hero">
                <hgroup>
                    <h1>Welcome</h1>
                    <h3>See players who have been performing exeptionally over past 5 matches.</h3>
                </hgroup>
                <button class="btn btn-hero btn-lg" role="button">View Players</button>
            </div>
        </div>
        <div class="item slides">
            <div class="slide-2"></div>
            <div class="hero">
                <hgroup>
                    <h1>Feature Teams</h1>
                    <h3>View the best performing teams over 5 matches.</h3>
                </hgroup>
                <button class="btn btn-hero btn-lg" role="button">View Teams</button>
            </div>
        </div>
        <div class="item slides">
            <div class="slide-3"></div>
            <div class="hero">
                <hgroup>
                    <h1>Scout Players</h1>
                    <h3>Find upcoming talents to bring out the best in your team</h3>
                </hgroup>
                <button class="btn btn-hero btn-lg" role="button">View CSPro Scouting picks.</button>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script src="~/Scripts/default.js"></script>
}
