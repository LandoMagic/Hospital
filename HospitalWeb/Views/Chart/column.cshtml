
@{
    ViewBag.Title = "column";
    Layout = "~/Views/Shared/TemplateLayout/_AppTemplateMasterLayout.cshtml";
}

<h2>Charts</h2>

<br />

<div id="visualization" style="width:600px; height:300px">



</div>


@section Scripts{
<script src="https://www.google.com/jsapi"></script>
   
    <script>
        $(document).ready(function () {
            //load Data here
            var chartData = null;
            $.ajax({
                url: 'GetSalesData',
                type: 'Get',
                dataType: 'json',
              
                success: function (d) {
                   
                    chartData = d;
                },
                error: function () {
                    alert('Error!')
                }
            }).done(function () {
                drawChart(chartData);
            });
        });
        function drawChart(d) {
            var chartData = d;

            var data = null;
            data = google.visualization.DataView(chartData);
          
            view.setColumns([0, {
                type: 'number',
                label: data.getColumnLabel(0),
                calc: function () { return 0; }
            }, {
                type: 'number',
                label: data.getColumnLabel(1),
                calc: function () { return 0; }
            }, {
                type: 'number',
                label: data.getColumnLabel(3),
                calc: function () { return 0; }
            }]);

            var chart = new google.visualization.Col(document.getElementById('visualization'));
            var options = {
                title: 'Sales Report',
                Legend: 'bottom',
                hAxis: {
                    title: 'Year',
                    format: '#'

                },
                vAxis: {
                    minValue: 0,
                    maxValue: 1000000,
                    title: 'Sale Amount'

                },
                chartArea: {
                    left:100, top: 50, width:'70%', height: '50%'
                },
                animation: {
                    duration:1000
                }

            };
            var First = google.visualization.events.addListener(chart, 'ready', function () {
                google.visualization.events.removeAllListeners(First);
                chart.draw(view, options);
            });
            chart.draw(view, options);
        }
        google.load('visualization', '1', { packages: ['corechart'] });
    </script>
    
    
    }